{
  "name": "surfpack",
  "version": "1.0.15",
  "description": "Run your JavaScript/TypeScript code directly in the browser with zero bundling.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vvanghelue/surfpack.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && node build.js",
    "build:prod": "rimraf dist && node build.js --production",
    "dev-serve": "serve ./ -l 5101",
    "dev-watch": "node build.js --watch",
    "dev": "npm run build && concurrently -k \"npm:dev-watch\" \"npm:dev-serve\"",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepublishOnly": "npm run build:prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@uiw/codemirror-theme-vscode": "^4.25.3",
    "codemirror": "^6.0.2",
    "lucide": "^0.553.0",
    "lucide-react": "^0.553.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "concurrently": "^8.2.2",
    "esbuild": "^0.26.0",
    "rimraf": "^5.0.1",
    "rolldown": "^1.0.0-beta.48",
    "serve": "^14.2.0",
    "typescript": "^5.6.3"
  }
}
